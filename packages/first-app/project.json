{
  "root": ".",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
    "skipRootChangelog": false,
    "generateNotes": true,
    "tag": "${tag}",
    "skipCommitTypes": ["ci", "docs", "style", "refactor"],
    "postTargets": ["first-app:github"]
}
    },
  "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "generateNotes": true,
        "changelogHeader": "${tag}",
        "tag": "${tag}"
      }
    }
  }
}